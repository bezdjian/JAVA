<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.jerseyapi.entities.ProductsEntity" table="products" schema="mylms">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="createDate">
            <column name="create_date" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="currency">
            <column name="currency" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="image">
            <column name="image" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double" precision="-1" not-null="true"/>
        </property>
        <property name="productDescription">
            <column name="product_description" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>