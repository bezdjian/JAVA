<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.jerseyapi.entities.CourseEntity" table="course" schema="mylms">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="categoryid">
            <column name="categoryid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="courseimage">
            <column name="courseimage" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="coursename">
            <column name="coursename" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(5000)" length="5000" not-null="true"/>
        </property>
        <property name="idnumber">
            <column name="idnumber" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>