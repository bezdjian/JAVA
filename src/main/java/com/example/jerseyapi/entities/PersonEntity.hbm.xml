<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.jerseyapi.entities.PersonEntity" table="person" schema="mylms">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="accounttype">
            <column name="accounttype" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="companylocation">
            <column name="companylocation" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="companyname">
            <column name="companyname" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="companyservices">
            <column name="companyservices" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="country">
            <column name="country" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="firstname">
            <column name="firstname" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="fullName">
            <column name="fullName" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="lastname">
            <column name="lastname" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="role">
            <column name="role" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="username">
            <column name="username" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="profileImage">
            <column name="profileImage" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>